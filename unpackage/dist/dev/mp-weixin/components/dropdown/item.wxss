}
.dropdown--more-item-box .con-box .items .txt.active {
  color: #4985F6;
  border: 1px solid #4985F6;
  background-color: #fff;
}
.dropdown--more-item-box .btns {
  z-index: 20;
  position: absolute;
  left: 0px;
  bottom: 0rpx;
  width: 750rpx;
  justify-content: space-between;
  background-color: #fff;
  text-align: center;
  padding: 10rpx 0px 40rpx;
}
.dropdown--more-item-box .btns .btn {
  display: inline-block;
  width: 296rpx;
  height: 68rpx;
  line-height: 68rpx;
  border: 1rpx solid #4985F6;
  color: #4985F6;
  border-radius: 10rpx;
}
