.dropdown-item-box {
  position: relative;
  background-color: #fff;
  height: calc(50vh);
  overflow-y: scroll;
  border-radius: 0rpx 0rpx 25rpx 25rpx;
}
.dropdown-item-box .overlay {
  position: fixed;
  left: 0px;
  top: 0px;
  width: calc(100vw);
  height: calc(100vh);
  z-index: -1;
  background-color: transparent;
}
.dropdown-item-box::after {
  position: fixed;
  left: 0px;
  top: 0px;
  width: calc(100vw);
  height: calc(100vh);
  content: "";
  background-color: rgba(0, 0, 0, 0.6);
  z-index: -2;
}
.dropdown-item-box .con-box {
  position: relative;
  z-index: 3;
  padding: 10rpx 42rpx 50rpx;
}
.dropdown-item-box .con-box .inline_items .txt {
  display: inline-block;
  padding: 10rpx 44rpx;
  margin: 14rpx 6rpx;
  font-size: 24rpx;
  color: #909399;
  line-height: 38rpx;
  background-color: #F3F4F6;
  border: 1px solid #F3F4F6;
  border-radius: 100rpx;
}
.dropdown-item-box .con-box .inline_items .txt.active {
  color: #4985F6;
  border: 1px solid #4985F6;
  background-color: #fff;
}
.dropdown-item-box .con-box .block_items .txt {
  display: block;
  padding: 10rpx 44rpx;
  margin: 14rpx 6rpx;
  font-size: 24rpx;
  color: #909399;
  line-height: 38rpx;
  background-color: #F3F4F6;
  border: 1px solid #F3F4F6;
}
.dropdown-item-box .con-box .block_items .txt.active {
  color: #4985F6;
  border: 1px solid #4985F6;
  background-color: #fff;
}
.dropdown--more-item-box {
  position: relative;
  box-sizing: border-box;
  background-color: #fff;
  padding: 20rpx 42rpx 90rpx;
  border-radius: 0rpx 0rpx 25rpx 25rpx;
}
.dropdown--more-item-box .overlay {
  position: fixed;
  left: 0px;
  top: 0px;
  width: calc(100vw);
  height: calc(100vh);
  z-index: -1;
  background-color: transparent;
}
.dropdown--more-item-box::after {
  position: fixed;
  left: 0px;
  top: 0px;
  width: calc(100vw);
  height: calc(100vh);
  content: "";
  background-color: rgba(0, 0, 0, 0.6);
  z-index: -2;
}
.dropdown--more-item-box .selectTit {
  font-size: 28rpx;
  color: #303133;
  line-height: 40rpx;
}
.dropdown--more-item-box .selectTit .tit {
  display: inline-block;
  width: 566rpx;
}
.dropdown--more-item-box .selectTit .clear {
  display: inline-block;
  width: 100rpx;
  text-align: right;
}
.dropdown--more-item-box .con-box {
  height: calc(50vh);
  overflow-y: scroll;
  position: relative;
  z-index: 3;
  margin-bottom: 30rpx;
}
.dropdown--more-item-box .con-box .items .txt {
  display: inline-block;
  padding: 10rpx 44rpx;
  margin: 14rpx 6rpx;
  font-size: 24rpx;
  color: #909399;
  line-height: 38rpx;
  background-color: #F3F4F6;
  border: 1px solid #F3F4F6;
